<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/item_seleted"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/item_bg">

        <RelativeLayout
            android:id="@+id/rl_wx_iv_layout"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_wx_icon"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/wx_pay_logo"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_wx_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rl_wx_iv_layout"
            android:text="微信支付"
            android:textColor="@color/car_detail_color"
            android:textSize="@dimen/text_size_18"/>

        <CheckBox
            android:id="@+id/cb_wx"
            style="@style/MMCheckBox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_10"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="2dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/item_bg">

        <RelativeLayout
            android:id="@+id/rl_ali_iv_layout"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_ali_icon"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ali_pay_logo"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_ali_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rl_ali_iv_layout"
            android:text="支付宝支付"
            android:textColor="@color/car_detail_color"
            android:textSize="@dimen/text_size_18"/>

        <CheckBox
            android:id="@+id/cb_ali"
            style="@style/MMCheckBox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_10"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_8"
            android:background="@color/red_500"
            android:text="@string/确认支付"
            android:textColor="@color/item_seleted"
            android:textSize="22sp"
            />
    </RelativeLayout>


</LinearLayout>
