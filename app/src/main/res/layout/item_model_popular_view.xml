<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_position"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_width="60dp"

            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_toRightOf="@+id/tv_position"
            android:layout_margin="@dimen/padding_8"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:background="@drawable/default_bg"
            android:layout_height="80dp"/>
        <ImageView
            android:id="@+id/iv_right"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:src="@drawable/arrow"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_toLeftOf="@+id/iv_right"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_car_name"
                android:layout_width="match_parent"
                android:lines="1"
                android:layout_marginBottom="@dimen/padding_4"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/car_detail_color"
                android:textSize="@dimen/text_size_18"/>

            <TextView
                android:id="@+id/tv_car_model_name"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/padding_4"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_15"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_color_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_bodyColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_car_body_color"
                    android:layout_marginBottom="@dimen/padding_4"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/car_color_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_interiorColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_car_interior_color"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/car_color_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>