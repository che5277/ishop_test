<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom">

    <View
        android:id="@+id/bottome_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F7A51A"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_below="@id/bottome_divider"
        android:background="@color/bottom_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/home_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top|center_horizontal">

            <RelativeLayout
                android:visibility="visible"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/home_selected_layout"
                    android:background="@drawable/menu_selected_background"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </RelativeLayout>
                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_home_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/menu_home"
                    />

                <TextView
                    android:id="@+id/tv_home_text"
                    android:layout_below="@+id/iv_home_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/主页"
                    android:textColor="@color/selector_task_result_tag"
                    android:textSize="@dimen/bottom_bar_options_text_size"
                    />
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/carLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top|center_horizontal">

            <RelativeLayout
                android:id="@+id/rl_car_normal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/car_selected_layout"
                    android:visibility="gone"
                    android:background="@drawable/menu_selected_background"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </RelativeLayout>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_car_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/menu_car"
                    />

                <TextView
                    android:id="@+id/tv_car_Text"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/iv_car_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/买车"
                    android:textColor="@color/selector_task_result_tag"
                    android:textSize="@dimen/bottom_bar_options_text_size"
                    />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/accessory_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top|center_horizontal">

            <RelativeLayout
                android:id="@+id/rl_accessory_normal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/accessory_seleted_layout"
                    android:visibility="gone"
                    android:background="@drawable/menu_selected_background"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </RelativeLayout>
                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_accessory_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/menu_accessory"
                    />

                <TextView
                    android:id="@+id/tv_accessory_text"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/iv_accessory_icon"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/商品"
                    android:textColor="@color/selector_task_result_tag"
                    android:textSize="@dimen/bottom_bar_options_text_size"
                    />
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/my_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top|center_horizontal">

            <RelativeLayout
                android:id="@+id/rl_my_normal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/my_selected_layout"
                    android:visibility="gone"
                    android:background="@drawable/menu_selected_background"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </RelativeLayout>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_my_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/menu_my"
                    />

                <TextView
                    android:id="@+id/tv_my_text"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/iv_my_icon"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/我的"
                    android:textColor="@color/selector_task_result_tag"
                    android:textSize="@dimen/bottom_bar_options_text_size"
                    />
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
